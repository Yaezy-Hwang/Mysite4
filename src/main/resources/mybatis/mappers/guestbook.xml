<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="guestbook">
	
	<select id = "selectList" parameterType= "com.javaex.vo.GuestbookVo" resultType="com.javaex.vo.GuestbookVo">
		<![CDATA[
			
			SELECT ROWNUM ro, no, name, password pw, content, reg_date "date"
			FROM (SELECT no, name, password, content, reg_date
    			  FROM guestbook
    			  ORDER BY no asc)
			ORDER BY ROWNUM desc

		]]>
	</select>
	
	
	<insert id= "insert" parameterType="com.javaex.vo.GuestbookVo">
		<![CDATA[
		
		INSERT INTO guestbook
		VALUES(seq_no.nextval, #{name}, #{pw}, #{content}, sysdate)
		
		]]>
	</insert>
	
	
	<delete id="delete" parameterType="map">
		<![CDATA[
		
			DELETE FROM guestbook
			WHERE no = #{no}
			AND password = #{pw}
		
		]]>
	</delete>
	
	
</mapper>
	